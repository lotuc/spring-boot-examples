<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lotuc.spring.rest.example.springmybatis.repository.security.UserRepository">
    <select id="findByName" resultType="org.lotuc.spring.rest.example.springmybatis.domain.security.User">
        SELECT id, name, password FROM user WHERE name = #{name}
    </select>
    <select id="findAll" resultType="org.lotuc.spring.rest.example.springmybatis.domain.security.User">
        SELECT id, name FROM user
    </select>
    <insert id="save" parameterType="org.lotuc.spring.rest.example.springmybatis.domain.security.User">
        INSERT INTO user(id, name, password)
        VALUES (#{id}, #{name}, #{password})
    </insert>
</mapper>
